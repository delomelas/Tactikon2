<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232425"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="uk.co.eidolon.shared.activities.ProfileFragment" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/logo_image"
            android:layout_width="@dimen/large_icon"
            android:layout_height="@dimen/large_icon"
            android:padding="3dp"
            android:layout_margin="6dp"
            android:background="#000"
            />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/alias_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_large"
                android:textColor="#fff"
                android:padding="3dp"
                android:text="">
                </TextView>
                
            <TextView
                android:id="@+id/played_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#fff"
                android:padding="3dp"
                android:text="">
                </TextView>
                
            <TextView
                android:id="@+id/playing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#fff"
                android:padding="3dp"
                android:text="">
            </TextView>
            
            
        </LinearLayout>
        
    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="3dp"
	        android:gravity="center_horizontal"
	        android:background="#111213"
	        android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:orientation="vertical">
	            <TextView
	                android:id="@+id/loss_text"
	                android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textColor="#fff"
		        	android:textStyle="bold"
		        	android:textSize="@dimen/text_size_normal"
		        	android:text="Lost"></TextView>
	            <TextView
	                android:id="@+id/loss_perc"
	                android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textColor="#fff"
		        	android:textSize="@dimen/text_size_normal"
		        	android:text="---"></TextView>
	            <TextView
	                android:id="@+id/loss_num"
	                android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textColor="#fff"
		        	android:textSize="@dimen/text_size_normal"
		        	android:text="---"></TextView>
		        
		    </LinearLayout>
		    <ImageView
		        android:id="@+id/win_donut"
		        android:layout_gravity="center_horizontal"
		        android:layout_width="@dimen/profile_section"
		        android:layout_height="@dimen/profile_section"/>
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:orientation="vertical">
	            <TextView
	                android:id="@+id/win_text"
	                android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textColor="#fff"
		        	android:textStyle="bold"
		        	android:textSize="@dimen/text_size_normal"
		        	android:text="Won"></TextView>
	            <TextView
	                android:id="@+id/win_perc"
	                android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textColor="#fff"
		        	android:textSize="@dimen/text_size_normal"
		        	android:text="---"></TextView>
	            <TextView
	                android:id="@+id/win_num"
	                android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textColor="#fff"
		        	android:textSize="@dimen/text_size_normal"
		        	android:text="---"></TextView>
	        </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/rank_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop = "10dp" 
        android:orientation="horizontal">
	    
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            >
        <ImageView
            android:id="@+id/rank_image_background"
            android:layout_width="@dimen/large_icon"
            android:padding="3dp"
            android:background="#000"
            android:layout_height="@dimen/large_icon"/>
        <ImageView
            android:id="@+id/rank_image_colour"
            android:layout_width="@dimen/large_icon"
            android:padding="3dp"
            android:background="#00000000"
            android:layout_height="@dimen/large_icon"/>
        </RelativeLayout>"
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
	        <TextView 
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="0dp"
	            android:id="@+id/rank_title_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="#fff"
	        	android:textSize="@dimen/text_size_large"
	            android:text="Sergeant"/>
	        
	        <TextView 
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:paddingBottom="5dp"
	            android:paddingTop="0dp"
	            android:id="@+id/rank_desc_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="#ddd"
	        	android:textSize="@dimen/text_size_small"
	        	android:text="played over 50 games"/>
	        
	        <TextView
	            android:padding="5dp"
	            android:id="@+id/rank_position_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="#fff"
	        	android:textSize="@dimen/text_size_normal"
	            android:text="1st out of 400 players with the same rank"/>
	        
        </LinearLayout>
        
        

    </LinearLayout>


</LinearLayout>
</ScrollView>