<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="10dp"
    
    android:background="@drawable/background" >
    
    <Button
            android:layout_marginTop="0dp"
            android:layout_gravity="right"
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"/>
       
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:src="@drawable/tactikon_logo"/>
    
    <TextView
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strategy gaming for the serious tactics fan"
        android:padding="15dp"
        ></TextView>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Welcome to Tactikon 2. New users can play the tutorial to introduce the basics:"
        android:paddingTop="10dp">
    </TextView>
    
       <Button
            	android:layout_marginTop="4dp"
            	android:id="@+id/tutorial_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play tutorial level"/>
       
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Or start a single player game of your choice:"
        android:paddingTop="10dp">
       </TextView>
       
       <Button
             android:layout_marginTop="4dp"
             android:id="@+id/single_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="New Local Game"/>
       
       
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Or jump right into a multiplayer game:"
        android:paddingTop="10dp">
       </TextView>
       
       <Button
             android:layout_marginTop="4dp"
             android:id="@+id/account_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Edit Profile"/>
       
       
        <Button
             android:layout_marginTop="4dp"
             android:id="@+id/join_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Join Game"/>
             
       
</LinearLayout>
</ScrollView>