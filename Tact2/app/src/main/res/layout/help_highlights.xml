<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout 
    style = "@style/HelpLayout" >
    
    <TextView style="@style/HelpBoldText"
        android:text="Game Highlights"/>
    
    <TextView style="@style/HelpText"
        android:text="When viewing the game arena, there are two buttons to the right hand side."/>
    
    <ImageView style="@style/HelpImage"
        android:src="@drawable/button_units"/>
    <TextView style="@style/HelpText"
        android:text="Press this button to highlight all your own units."/>
    
    <ImageView style="@style/HelpImage"
        android:src="@drawable/button_moves"/>
    <TextView style="@style/HelpText"
        android:text="Press this button to highlight all of your units that can either move or attack."/>
        

</LinearLayout>
</ScrollView>

