<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stateinfobackground">

    <ImageView
        android:id="@+id/mini_map"
        android:layout_width="@dimen/game_icon_size"
        android:layout_height="@dimen/game_icon_size"
        android:layout_margin="2dp"
        android:background="#555"
        android:padding="0dp"
        android:src="@drawable/ab_stacked_solid_tactikon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/playername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/timesection"
            android:maxLines="1"
            android:text="..."
            android:textColor="#fff"
            android:textSize="@dimen/state_info_text_size" />

        <LinearLayout
            android:id="@+id/timesection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/state_info_text_size"
                android:layout_height="@dimen/state_info_text_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/timeleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 hours"
                android:textColor="#fff"
                android:textSize="@dimen/state_info_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/textinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playername"
            android:text="..."
            android:textColor="#eee"
            android:textSize="@dimen/state_info_text_size" />

        <LinearLayout
            android:id="@+id/logo_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/new_message_star"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textinfo"
            android:layout_alignParentLeft="true"
            android:background="#00000000"

            android:src="@drawable/message_star"></ImageView>


    </RelativeLayout>


</LinearLayout>
