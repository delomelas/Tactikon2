<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/lcd_background"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="3dp"
        android:orientation="vertical">
    <TextView
		android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/gamedialog_largetext"
        android:textColor="#000"
        android:layout_gravity="left"
        android:text="COMBAT ANALYSIS  "/>
    
    <TableRow
    	android:layout_height="wrap_content"
    	android:background="#20000000"
    	android:gravity="center_vertical"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/attack_image"
            android:layout_weight="1"
            android:paddingLeft="5dp"
        	android:paddingRight="5dp"
            android:layout_height="@dimen/gamedialog_normalicon"/>
        <TextView
            android:id="@+id/vs_text"
           	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_extralargetext"
        	android:paddingLeft="10dp"
        	android:paddingRight="10dp"
        	android:textColor="#000"
        	android:text="VS"/>

        <ImageView
            android:id="@+id/defender_image"
            android:layout_weight="1"
            android:paddingLeft="5dp"
        	android:paddingRight="5dp"
            android:layout_height="@dimen/gamedialog_normalicon"/>

    </TableRow>

    <TableRow
    	android:layout_height="wrap_content"
    	android:background="#20000000"
    	android:gravity="center"
        android:layout_width="match_parent">
        <TextView
        	android:id="@+id/att_att_title"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="ATK"/>
        <TextView
        	android:id="@+id/att_def_title"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="DEF"/>
        <TextView
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text=""/>
        <TextView
        	android:id="@+id/def_att_title"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="ATK"/>
        <TextView
        	android:id="@+id/def_def_title"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="DEF"/>
        
    </TableRow>
    
    <TableRow
    	android:layout_height="wrap_content"
    	android:background="#20000000"
    	android:gravity="center"
        android:layout_width="match_parent">
        <TextView
        	android:id="@+id/att_att_stat"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="6"/>
        <TextView
        	android:id="@+id/att_def_stat"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="8"/>
        <TextView
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text=""/>
        <TextView
        	android:id="@+id/def_att_stat"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="3"/>
        <TextView
        	android:id="@+id/def_def_stat"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="4"/>
        
    </TableRow>
    
    <LinearLayout
        android:id="@+id/modifier_area"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
    </LinearLayout>
    
        <Button
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/attack_button"
	        android:layout_marginTop="3dp"
	        android:layout_marginLeft="3dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:background="@drawable/lcd_button"
	        android:textColor="#000"
	        android:layout_gravity="bottom|left"
	        android:text="ATTACK"></Button>
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
    <TextView
        android:id="@+id/results_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/gamedialog_largetext"
        android:textColor="#000"
        android:layout_gravity="left"
        android:text="DAMAGE ODDS  "/>
    
    <TableRow
    	android:layout_height="wrap_content"
    	android:background="#20000000"
    	android:layout_width="match_parent">
    	
        <TextView
	        android:id="@+id/you_text"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="YOU"/>
        <TextView
	        android:id="@+id/chance_text"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="CHANCE"/>
        <TextView
	        android:id="@+id/enemy_text"
        	android:layout_weight="1"
        	android:textSize="@dimen/gamedialog_normaltext"
        	android:textColor="#000"
        	android:gravity="center"
        	android:text="ENEMY"/>
	</TableRow>
        
    <LinearLayout
        android:id="@+id/results_area"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:orientation="horizontal">

    <TextView
        android:id="@+id/dismiss_text"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:text="@string/dismiss"
        android:textColor="#000"
        android:textSize="@dimen/gamedialog_massivetext"/>     
    </LinearLayout> 
</LinearLayout>
</LinearLayout>
