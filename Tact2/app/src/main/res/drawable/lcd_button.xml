<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
<shape android:shape="rectangle">
         <gradient android:startColor="#80000000" android:endColor="#80000000" />
         <stroke android:width="2dp" android:color="#000"/>
      </shape>

</item> 
    
          
<item android:state_focused="true">

      <shape android:shape="rectangle">
         <gradient android:startColor="#40000000" android:endColor="#40000000" />
         <stroke android:width="2dp" android:color="#000"/>
      </shape>
</item> 
          
<item android:state_enabled="false">

      <shape android:shape="rectangle">
         <gradient android:startColor="#10000000" android:endColor="#10000000" />
         <stroke android:width="2dp" android:color="#555"/>
      </shape>

</item>
    	   
    	  
    	  
<item>

      <shape android:shape="rectangle">
         <gradient android:startColor="#30000000" android:endColor="#30000000" />
         <stroke android:width="2dp" android:color="#000"/>
      </shape>

</item>        
    
</selector>